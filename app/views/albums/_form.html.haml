= simple_form_for [user, album], :html => { class: 'form-horizontal', multipart: true } do |f|
  = f.input :name
  = f.input :artist
  = f.input :label
  = f.input :released_on, as: :string
  = f.association :genre
  = f.input :description, input_html: {rows: 10}
  = f.input :cover_image
  - if album.cover_image?
    .control-group
      %label.control-label Cover preview
      .controls
        = image_tag album.cover_image.thumb.url
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), user_albums_path(user), :class => 'btn'
