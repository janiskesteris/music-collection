- model_class = Album
.page-header
  %h1=t '.title', :default => model_class.model_name.human

.span3
  =link_to image_tag(@album.cover_image.medium.url), @album.cover_image.url, class: "colorbox-content"
.span5
  %p
    %strong= model_class.human_attribute_name(:name) + ':'
    %br
    = @album.name
  %p
    %strong= model_class.human_attribute_name(:artist) + ':'
    %br
    = @album.artist
  %p
    %strong= model_class.human_attribute_name(:label) + ':'
    %br
    = @album.label
  %p
    %strong= model_class.human_attribute_name(:released_on) + ':'
    %br
    = @album.released_on
  %p
    %strong= model_class.human_attribute_name(:genre_id) + ':'
    %br
    = @album.genre_name
  %p
    %strong= model_class.human_attribute_name(:description) + ':'
    %br
    = @album.description
.clearfix
- if can? :manage, @album
  .form-actions
    = link_to t('.back', :default => t("helpers.links.back")), user_albums_path(current_user), :class => 'btn'
    = link_to t('.edit', :default => t("helpers.links.edit")), edit_user_album_path(@album.user, @album), :class => 'btn'
    = link_to t('.destroy', :default => t("helpers.links.destroy")), user_album_path(@album.user, @album), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
